{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Base", 	    "slug": "base", 	  "color": "#F9F5EA" },
				{ "name": "Contrast", 	"slug": "contrast",   "color": "#42514C" },
				{ "name": "Primary", 	"slug": "primary",	  "color": "#1DD0DC" },
				{ "name": "Primary 2", 	"slug": "primary-2",  "color": "#5199A8" },
				{ "name": "Secondary", 	"slug": "secondary",  "color": "#41DD4F" }
			],
			"custom": true,
			"gradients": [],
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Playfair Display",
					"slug": "playfair-display",
					"fontFamily": "\"Playfair Display\",ui-serif, Georgia, serif",
					"fontFace": [
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/playfair-display/playfair-display-v30-latin-600.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Montserrat, -apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"slug": "montserrat",
					"name": "Montserrat",
					"fontFace": [
						{
							"fontFamily": "Montserrat",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/montserrat/montserrat-v25-latin-regular.woff2" ]
						},
						{
							"fontFamily": "Montserrat",
							"fontWeight": "400",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/montserrat/montserrat-v25-latin-italic.woff2" ]
						},
						{
							"fontFamily": "Montserrat",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/montserrat/montserrat-v25-latin-700.woff2" ]
						},
						{
							"fontFamily": "Montserrat",
							"fontWeight": "700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/montserrat/montserrat-v25-latin-700italic.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "1rem" },
				{ "name": "Medium",   "slug": "medium",   "size": "1.125rem" },
				{ "name": "Large",    "slug": "large",    "size": "1.5rem" },
				{ "name": "X-large",  "slug": "x-large",  "size": "2.25rem" },
				{ "name": "XX Large", "slug": "xx-large", "size": "3.5rem" }
			],
			"customFontSize": false,
            "lineHeight": true,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "50rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{ "name": "1", "slug": "30", "size": "1rem" },
				{ "name": "2", "slug": "40", "size": "1.5rem" },
				{ "name": "3", "slug": "50", "size": "2.25rem" },
				{ "name": "4", "slug": "60", "size": "3.5rem" },
				{ "name": "5", "slug": "70", "size": "5.25rem" }
			],
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"typography": {
				"line-height": {
					"small": 1.1,
					"normal": 1.5
				}
			},
			"borderRadius": {
				"small": "6px",
				"medium": "10px"
			},
			"spacing": {
				"bannerHeight": "clamp(12rem, 20vw, 16rem)"
			},
			"layout": {
				"fullSize": "60rem"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": 	  "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--40)",
			"padding": {
				"top": "var(--wp--preset--spacing--50)",
				"right": "var(--wp--preset--spacing--50)",
				"bottom": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "currentColor"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "var(--wp--custom--border-radius--small)"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"fontWeight": "400",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				},
				"color": {
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}				
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/post-content": {
				"spacing": {
					"blockGap": 0
				}
			},
			"core/column": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)"
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--second-base)"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
